<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >
    <!-- 设置mysql驱动路径 -->
    <classPathEntry location="E:\java\jar\jar\mysql-connector-java-5.1.46.jar" />

    <!-- 此处指定生成针对MyBatis3的相关类，xml -->
    <context id="context1" targetRuntime="MyBatis3">

        <!-- jdbc连接信息 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/boolib?characterEncoding=utf8" userId="root" password="admin" />

        <!-- 生成vo模型对象  -->
        <javaModelGenerator targetPackage="com.taotao.pojo" targetProject="src/main/java" >
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!--生成映射文件存放位置-->
        <sqlMapGenerator targetPackage="com.taotao.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="true" />
        </sqlMapGenerator>

        <!--生成Model映射接口类存放位置-->
        <javaClientGenerator
                targetPackage="com.taotao.mapper.mapper"
                targetProject="src/main/java" type="XMLMAPPER" />

        <table tableName="user"
               domainObjectName="User"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="false">
        </table>
    </context>
</generatorConfiguration>
